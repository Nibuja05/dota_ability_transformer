{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "../../game/scripts/vscripts",
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["@moddota/dota-lua-types/normalized", "transformer"],
		"plugins": [{ "transform": "@moddota/dota-lua-types/transformer" }, { "transform": "transformer/transform" }],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"strict": true
	},
	"tstl": {
		"luaTarget": "JIT",
		"sourceMapTraceback": true
	},
	"include": ["**/*.ts", "../common/**/*.ts"]
}
